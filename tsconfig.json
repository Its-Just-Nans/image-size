{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist/cjs",
    "declarationDir": "dist/dts",
    "rootDir": "./lib",
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*"
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": ["lib/index.ts"],
    "out": "docs"
  }
}
